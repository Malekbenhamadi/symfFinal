{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
{{user.email}}
<br>
  {% for peinture in peintures %}
					<tr>
				
				<td>{{ peinture.id }}</td>
                <td>{{ peinture.nom }}</td>
                <td>{{ peinture.largeur }}</td>
                <td>{{ peinture.hauteur }}</td>
                <td>{{ peinture.prix }}</td>
                <td>{{ peinture.description }}</td>
				
				<td>
							<a href="{{ path('app_peinture_edit', {'id': peinture.id}) }}" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
							<a href="{{ path('app_peinture_delete', {'id': peinture.id}) }}" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
				</td>
					</tr>
		       {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}			

    </div>
{% endblock %}
